.ui.cards > .card .dimmer,
.ui.card .dimmer {
  border-radius: @defaultBorderRadius !important;
}

@media only screen and (min-width : @tabletBreakpoint) {
  .ui.card:first-child {
    margin-top: 24px;
  }
}

@media only screen and (max-width : @largestMobileScreen) {
  .ui.card .content {
    padding-left: 16px;
    padding-right: 16px;
  }
}
